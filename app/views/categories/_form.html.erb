<%= form_for(@category) do |f| %>
  <div class="col-md-8">
    <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
          <%= f.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>