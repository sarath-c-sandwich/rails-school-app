<h2>Add/Edit tutor details</h2>
<div class="col-lg-8">
    <%= form_for(@tutor) do |f|  %>
     <div class="form-group">
        <%= f.label :title, class:"control-label" %>
        <%= f.select :title, Tutor::TITLES, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :first_name, class:"control-label" %>
        <%= f.text_field :first_name, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :last_name, class:"control-label" %>
        <%= f.text_field :last_name, class:"form-control" %>
    </div>

    <div class="form-group">       
      <div><label class="control-label">Designatory</label></div>  
      <%=f.collection_check_boxes(:designatory_ids, Designatory.all,:id, :designator,{}, {:multiple=>true, class:"checkboxs-group"})%> 
    </div>

    <div class="form-group">
        <%= f.label :daily_rate, "Daily rate(USD-$)", class:"control-label" %>
        <%= f.number_field :daily_rate, class:"form-control" %>
    </div>

    <div class="form-group"> 
     <label class="control-label">Languages</label>        
      <%=f.collection_select(:language_ids, Language.all,:id,:language,{},{:multiple=>true, class:"form-control"}) %>    
    </div> 

    <div class="form-group">
      <div><label class="control-label">Skillset</label></div>       
      <%=f.collection_check_boxes(:skillset_ids, Skillset.all,:id, :skill,{}, {:multiple=>true, class:"checkboxs-group"})%> 
    </div>

    <div class="form-group">
      <%= f.label :publish, "Publish ?", class:"control-label" %>
      <%= f.check_box :publish %>
    </div>

    <div class="form-group">
        <%= f.submit "Save",class:"btn btn-success" %>
    </div>

    <% end %>
</div>




