<h2><%= pluralize(blank_skillset?, "skill") %> are on the skillset list</h2>
<%= render "form" %>
<div class="container" style="margin-top: 40px">
<table class="table table-hover">
  <tr class="success">
    <th>#</th>
    <th>Skill(s)</th>
    <th></th>
  </tr>
  <% @i = 0%>
  <% @skills.each do |skillset| %>
  <tr>
    <% if !skillset.skill.nil? %>
      <td>
        <%= @i +=1 %>
      </td>
      <td>
        <%= skillset.skill %>
      </td>
      <td>  
        <div class="pull-right">
        <%= link_to ("<span class='glyphicon glyphicon-edit'></span>").html_safe, edit_skillset_path(skillset) %> | 
        <%= link_to(("<span class='glyphicon glyphicon-trash'></span>").html_safe, skillset_path(skillset), method: :delete, data: {confirm: "Do you really want to delete?"}) %>        
        </div>
      </td>
    <% end %>
  </tr>
  <% end %>
</table>
</div>