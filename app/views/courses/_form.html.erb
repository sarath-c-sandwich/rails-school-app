<div class="col-lg-7">
    <%= form_for(@course) do |f|  %>
    <div class="form-group">
        <%= f.label :title, class:"control-label" %>
        <%= f.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :short_title, class:"control-label" %>
        <%= f.text_field :short_title, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :duration, "Duration (Days)", class:"control-label" %>
        <%= f.number_field :duration, class:"form-control" %>
    </div> 

    <div class="form-group">
        <%= f.label :cost_per_day, class:"control-label" %>
        <%= f.number_field :cost_per_day, class:"form-control" %>
    </div> 

    <div class="form-group">
        <%= f.label :summary, class:"control-label" %>
        <%= f.text_area :summary, class:"form-control", cols:"50", rows:"5" %>
    </div>

    <div class="form-group">        
        <%= f.check_box :published %>
        <%= f.label :published, class:"control-label" %>
    </div>

    <div class="form-group">
        <%= f.submit class:"btn btn-success" %>
    </div>
    <% end %>
</div>