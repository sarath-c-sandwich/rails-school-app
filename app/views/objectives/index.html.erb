<%= link_to "<< Back to courses", courses_path %>
<h2> List of the Objectives </h2>
<%= render "form" %>
<div class="container" style="margin-top: 40px">
    <table class="table table-hover">
        <tr class="success">
          <th>#</th>
          <th>Objective(s)</th>
          <th>Controls</th>
        </tr>
      <% @i = 0%>
      <% @objectives.each do |obj| %>
        <tr>
          <% if !obj.description.nil? %>
                <td>
                  <%= @i +=1 %>
                </td>
                <td>
                  <%= obj.description %>
                </td>
                <td>  
                  <div class="pull-right">
                  <%= link_to ("<span class='glyphicon glyphicon-edit'></span>").html_safe, edit_course_objective_path(@course, obj) %> | 
                  <%= link_to(("<span class='glyphicon glyphicon-trash'></span>").html_safe, course_objective_path(@course, obj), method: :delete, data: {confirm: "Do you really want to delete?"}) %>
                  </div>
                </td>
            <% end %>
        </tr>
        <% end %>
    </table>
</div>